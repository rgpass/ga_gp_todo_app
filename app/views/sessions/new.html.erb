<% provide(:title, "Sign In") %>

<h1>Sign In</h1>

<%= form_for(:session, url: sessions_path) do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <br />

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br />

  <div>
    <%= f.submit 'Sign In' %>
  </div>

<% end %>
