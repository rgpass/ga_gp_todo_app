<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br />

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <br />

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br />

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <br />

  <div>
    <%= f.submit 'Done' %>
  </div>

<% end %>
